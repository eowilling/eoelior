{
  // ===================================
  // Cursor 直连配置（推荐）
  // ===================================
  
  // 禁用代理（因为您的网络可以直连）
  "http.proxy": "",
  "http.proxySupport": "off",
  
  // 或者使用系统代理设置（目前系统没有代理）
  // "http.proxySupport": "on",
  
  // SSL 证书验证
  "http.proxyStrictSSL": true,
  
  // 不使用系统证书
  "http.systemCertificates": true,
  
  // ===================================
  // 如果遇到连接问题，可以尝试：
  // ===================================
  
  // 选项 1: 完全禁用代理
  // "http.proxy": "",
  // "http.proxySupport": "off",
  
  // 选项 2: 使用系统代理
  // "http.proxySupport": "on",
  
  // 选项 3: 如果 SSL 有问题
  // "http.proxyStrictSSL": false,
  
  // ===================================
  // 网络超时设置（如果网速慢）
  // ===================================
  "http.timeout": 30000,
  
  // ===================================
  // DNS 设置
  // ===================================
  // 如果需要使用特定 DNS
  // Windows 系统设置：控制面板 → 网络 → 更改适配器设置
  
  // ===================================
  // Cursor AI 相关设置
  // ===================================
  // 如果 Cursor AI 连接有问题，可以尝试：
  "cursor.general.disableTelemetry": false,
  
  // ===================================
  // 其他可能有用的设置
  // ===================================
  "git.autofetch": true,
  "extensions.autoUpdate": true,
  
  // 注意：复制到 Cursor 设置时，请移除所有注释（// 开头的行）
}
