rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 限制 artifacts 集合下的 shared_wheels 資料夾僅限驗證使用者存取
    // 路徑: artifacts/{appId}/public/data/shared_wheels/{shareId}
    match /artifacts/{appId}/public/data/shared_wheels/{shareId} {
      allow read, write: if request.auth != null;
    }
  }
}
